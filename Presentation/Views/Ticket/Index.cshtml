@model List<TicketListModel> 
<div class="card">
    <div class="card-body">
        <div class="row">
            @* ViewBag.LastPrice *@
            @for (int i = 1; i <= 20; i++)
            {
            <div class="col-3">

                @if (Model.Find(a=>a.SeatNumber==i)!=null)
                {
                    <div class="card my-2 p-1 bg-danger text-white ">
                        No:  @i <br />
                        Durumu :Dolu
                    </div>
                }
                else
                {
                    <div class="card my-2 p-1 bg-primary text-white">
                        No:  @i <br />
                        Durumu : Boş <br />
                        Fiyatı : @ViewBag.LastPrice <br />
                        <a asp-action="Buy" asp-route-voyageId="@ViewBag.VoyageId" asp-route-price="@ViewBag.LastPrice" asp-route-seatNumber="@i" class="text-white">Satın Al</a>
                    </div>
                }



            </div>
            }
        </div>
   

    </div>
</div>